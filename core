vim9script
if exsis("g:mapleader")
        normeap <C-j> <C-w>j
        noremap <C-k> <C-w>k
        noremap <C-h> <C-w>h
        noremap <C-l> <C-w>l
        noremap <C-K> <C-w>K
        noremap <C-H> <C-w>H
        noremap <C-J> <C-w>J
        noremap <C-L> <C-w>L

        def Wall_this_file()
                wall!
                source %
        enddef
        noreamp W <cmd>call Wall_this_file()<cr>

        noremap <Tab>w <cmd>tabnew<cr>
        noremap <Tab>h <cmd>tabnext<cr>
        noremap <Tab>l <cmd>tabproview<cr>
        noremap <Tab>q <cmd>tabclose<cr>

endif
